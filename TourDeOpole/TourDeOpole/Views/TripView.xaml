<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewmodels="clr-namespace:TourDeOpole.ViewModels" x:DataType="viewmodels:TripViewModel"
             x:Class="TourDeOpole.Views.TripView"
             Title="TripView">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to TripView"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="GoToDetails" Command="{Binding GoToDetailsCommand}" BackgroundColor="Red"/>
            <Button Text="GoToAdd" Command="{Binding GoToAddCommand}" BackgroundColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>