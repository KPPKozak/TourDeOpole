<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TourDeOpole.Views.SimpleAddView"
             Shell.NavBarHasShadow="False"
             Title="Dodaj nowa lokalizacje"
             Shell.TabBarIsVisible="False">

    <ContentPage.Content>

        <Grid RowDefinitions="75,75,100,*,50,70" 
              ColumnDefinitions="40,*,40"
              BackgroundColor="White">
            <Frame Grid.ColumnSpan="3"
                   Grid.Column="0"
                   Grid.Row="0"
                   BackgroundColor="{DynamicResource Primary} "/>
            <Frame CornerRadius="90" 
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsClippedToBounds="True" 
                   Grid.Column="1"
                   Grid.Row="0"
                   Grid.RowSpan="2"
                   HeightRequest="100" 
                   WidthRequest="100" 
                   BorderColor="Black">
                <Image Source="AddAPhoto.png" 
                       Margin="10"/>
            </Frame>
            <ImageButton Grid.Row="1" 
                         Grid.Column="1" 
                         Source="AddButton.png" 
                         HorizontalOptions="Center" 
                         VerticalOptions="Center" 
                         BackgroundColor="Transparent" 
                         Margin="60,40,0,0"/>
            <StackLayout Orientation="Horizontal" Grid.Row="4" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center">
                <Button Style="{StaticResource ImportantButton}" 
                    Text="Dodaj"
                    WidthRequest="150"
                    BackgroundColor="{DynamicResource ButtonColor}" 
                    Margin="0"/>
                <Button Style="{StaticResource ImportantButton}" 
                    Text="Wróć"
                    WidthRequest="150"
                    BackgroundColor="{DynamicResource ButtonColor}"
                    Margin="0"/>
            </StackLayout>
            <Frame  Grid.Row="2"  
                    Grid.Column="1" 
                    Margin="0,20,0,30" 
                    CornerRadius="10"
                    Padding="0"     
                    BorderColor="Black">
                <Entry Margin="10,0,0,0" Placeholder="Nazwa"/>
            </Frame>
            <Frame  Grid.Row="3"
                    Grid.Column="1"
                    Margin="0,0,0,30"
                    CornerRadius="10"    
                    BorderColor="Black"
                    Padding="0">
                <Entry Margin="10,0,0,0" VerticalTextAlignment="Start" HorizontalTextAlignment="Start" Placeholder="Opis"/>
            </Frame>
        </Grid>
    </ContentPage.Content>
</ContentPage>